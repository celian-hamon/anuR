@model Service

@{
    ViewBag.Title = "title";
    Layout = "_ListLayout";
}

<div id="serviceModal" class="modal">
    <span class="close">&times;</span>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-black" id="exampleModalLabel">Add Site</h5>
            </div>
            <form method="post" action="@Url.Action("AddService", new { userId = @Model.Id })">
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Options</label>
                        </div>

                        <select class="custom-select" id="inputGroupSelect01" name="siteId">
                            <option selected>Choose a site</option>
                            @foreach (Service service in ViewBag.Services)
                            {
                                <option value="@service.Id">@service.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="document.getElementById('serviceModal').style.display='none';" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Add Service</button>
                </div>
            </form>
        </div>
    </div>
</div>
@* <button type="submit" class="border-none badge bg-success rounded-pill" id="serviceModalBtn" style="height: fit-content">add +</button> *@

<div style="display: flex;flex-direction: row;justify-content: space-between;margin-bottom:50px;">
    <h1>
        @Model.Name
    </h1>
    <div style="display: flex;flex-direction:row;align-items: center">
        <span class="badge bg-primary rounded-pill" style="font-size:1rem;height: fit-content">@Model.Users.Count</span>
        <h3 style="margin: 0 0 0 10px"> User@(@Model.Users.Count > 1 ? "s" : "")</h3>
    </div>
</div>
<div class="input-group" style="margin-bottom: 20px">
    <div class="form-outline input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">
                <i class="bi bi-search"></i>
            </label>
        </div>
        <input id="search-focus" onkeyup="myFunction()" type="search" id="form1" class="form-control" placeholder="Search"/>
    </div>
</div>
<div class="row">
    <div class="col">
        <ol class="list-group overflow-auto text-start" id="userList" style="height: 90%;">
            @foreach (User user in Model.Users)
            {
                <li>
                    <a style="z-index: 1" href="@Url.Action("User", new { user.Id })" class="list-group-item d-flex justify-content-between align-items-start active:hover list-group-item-action">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">@user.FirstName @user.LastName</div>
                            @user.Email
                        </div>
                        <span class="badge bg-primary rounded-pill">@user.PhoneNumber</span>
                        @if (User.IsInRole("Admin"))
                        {
                            <form style="z-index: 10" method="post" action="@Url.Action("RemoveService", new { userId = @user.Id, serviceId = Model.Id })">
                                <button type="submit" class="border-none badge bg-danger rounded-pill">remove</button>
                            </form>
                        }
                    </a>
                </li>
            }
        </ol>
    </div>
</div>

<h2></h2>

<script>
var serviceModal = document.getElementById("serviceModal");
var serviceBtn = document.getElementById("serviceModalBtn");
var serviceSpan = document.getElementsByClassName("close")[0];
serviceBtn.onclick = function() {
  serviceModal.style.display = "block";
}
serviceSpan.onclick = function() {
  serviceModal.style.display = "none";
}
