@model anuR.Views.App.Index

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col">
        <h2 class="text-start">
            <a asp-action="Sites" class="nav-link" style="font-size: 2rem;">Sites</a>
        </h2>
        <ol class="list-group list-group-numbered overflow-auto text-start">
            @foreach (Site site in Model.Sites)
            {
                <a href="@Url.Action("Site", new { site.Id })" class="list-group-item d-flex justify-content-between align-items-start active:hover list-group-item-action">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">@site.City</div>
                    </div>
                    <span class="badge bg-primary rounded-pill">@site.Users.Count</span>
                </a>
            }
        </ol>
    </div>
    <div class="col">
        <h2 class="text-start">
            <a asp-action="Users" class="nav-link" style="font-size: 2rem;">Employees</a>
        </h2>
        <ol class="list-group list-group-numbered overflow-auto text-start" style="height: 90%;">
            @foreach (User user in Model.Users)
            {
                <a href="@Url.Action("User", new { user.Id })" class="list-group-item d-flex justify-content-between align-items-start active:hover list-group-item-action">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">@user.FirstName @user.LastName</div>
                        @user.Email
                    </div>
                    <span class="badge bg-primary rounded-pill">@user.PhoneNumber</span>
                </a>
            }
        </ol>
    </div>
    <div class="col">
        <h2 class="text-start">
            <a asp-action="Services" class="nav-link" style="font-size: 2rem;">Services</a>
        </h2>
        <ol class="list-group list-group-numbered overflow-auto text-start">
            @foreach (Service service in Model.Services)
            {
                <a href="@Url.Action("Service", new { service.Id })" class="list-group-item d-flex justify-content-between align-items-start active:hover list-group-item-action">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">@service.Name</div>
                    </div>
                    <span class="badge bg-primary rounded-pill">@service.Users.Count</span>
                </a>
            }
        </ol>
    </div>
</div>